{
  "compilerOptions": {
    "outDir": "build",
    "types": ["chrome"],
    "module": "ES6",
    "target": "ES2018",
    "newLine": "lf",
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true
  },
  "files": [
    "./background.ts",
    "./content-script.ts"
  ]
}
