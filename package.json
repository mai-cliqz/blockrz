{
  "name": "blockrz",
  "version": "0.0.1",
  "description": "Build yourself an adblocker",
  "author": "Cliqz",
  "license": "MPL-2.0",
  "scripts": {
    "clean": "rm -rfv build *.bundle.js",
    "lint": "tslint -c tslint.json '*.ts'",
    "build": "tsc -p .",
    "bundle": "rollup -c rollup.config.ts",
    "prebundle": "npm run build",
    "watch": "npm run build && concurrently 'tsc -p . --watch' 'rollup -c rollup.config.ts --watch'"
  },
  "devDependencies": {
    "@types/chrome": "0.0.81",
    "concurrently": "^4.1.0",
    "rollup": "^1.9.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@cliqz/adblocker": "^0.9.0",
    "tldts": "^4.0.6"
  }
}
