{
  "extends": [
    "tslint:recommended"
    ],
    "rules": {
      "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
      "interface-name": false,
      "max-classes-per-file": false,
      "no-bitwise": false,
      "prefer-for-of": false,
      "no-console": false,
      "max-line-length": false,
      "quotemark": [true, "single", "avoid-escape", "avoid-template"]
    }
}
